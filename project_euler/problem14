#include <iostream>
using namespace std;
int main()
{
  unsigned int arr[1000000],i,n,m,max=0,j,max1=0;
  for (i=1000000;i>0;i--)
  {
    m=0;
    n=i;
    while(n!=1)
    {
      if(n%2==0)
      {
        n=n/2;
        m++;
      }
      else
      {
        n=(3*n)+1;
        m++;
      }
    }
    arr[i]=m;
  }
  for(j=1;j<=1000000;j++)
  {
    if (arr[j]>max)
    {
      max=arr[j];
      max1=j;
    }
  }
  cout<<max1<<endl;
  return 0;
}
